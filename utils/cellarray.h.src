  int64_t num_ngb;
  DOUBLE *x;
  DOUBLE *y;
  DOUBLE *z;
  weight_struct weights;
  cellarray_index_particles_DOUBLE **ngb_cells;
  DOUBLE *xwrap;
  DOUBLE *ywrap;
  DOUBLE *zwrap;
};

  
